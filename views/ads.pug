        .row
          .col-md-12
            .card
              .card-header.card-header-icon(data-background-color='green')
                i.material-icons &#xE894;
              .card-content
                h4.card-title.nanumsquare 광고
                .row 
                  .col-md-12.custom-flex
                    div.searchBox
                      input(type="text" class="form-control adsSearchInput" placeholder="이름")
                      button.btn.btn-primary.btn-sm.ml-auto.adsSearchButton 검색
                .row
                  .col-md-12
                    .table-responsive.table-sales
                      table.table.customTable
                        thead.text-primary
                          th 지역
                          th 이름
                          th 주소
                          th 내용
                          th 수정
                          th 삭제
                        -for(var i=0; i<ads.data.length; i++)
                            tr
                              td #{ads.data[i].location}
                              td #{ads.data[i].name}
                              td #{ads.data[i].content}
                              td #{ads.data[i].addr}
                              td
                                button.btn.btn-primary.btn-sm.adsImportButton(value = ""+ ads.data[i].idx) 수정
                              td
                                button.btn.btn-primary.btn-sm.adsDeleteButton(value = ""+ads.data[i].idx) 삭제


                    


